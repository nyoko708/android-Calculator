<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating_material_dark"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/textView12"
            android:textColor="#ffffff"
            android:text="1+1"
            android:textSize="40dp"
            android:gravity="right" />
    </LinearLayout>

    <TableRow
        android:id="@+id/anser_box"
        style="@style/anser_box"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1.5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:text="0"
            android:id="@+id/anser"
            style="@style/anser_text"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/background_floating_material_dark"
            android:autoText="false"
            android:textStyle="bold"
            android:theme="@style/Base.TextAppearance.AppCompat.Title.Inverse"
            android:textSize="40dp"
            android:padding="10dp" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3f3f40"
        android:layoutMode="clipBounds"
        android:stretchColumns="4"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/one"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textSize="50dp"
                android:textIsSelectable="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:onClick="numberOnClick"
                android:numeric="integer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/two"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:numeric="integer"
                android:onClick="numberOnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/three"
                android:background="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:numeric="integer"
                android:onClick="numberOnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="÷"
                android:id="@+id/textViewWaru"
                android:gravity="center"
                android:background="#d9fcff"
                android:textSize="50dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/four"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="50dp"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:onClick="numberOnClick"
                android:numeric="integer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/five"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:singleLine="true"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberOnClick"
                android:numeric="integer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/six"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:layout_weight="1"
                android:numeric="integer"
                android:onClick="numberOnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="×"
                android:id="@+id/textViewKakeru"
                android:gravity="center"
                android:background="#d9fcff"
                android:textSize="50dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/seven"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="50dp"
                android:textIsSelectable="true"
                android:singleLine="true"
                android:layout_weight="1"
                android:onClick="numberOnClick"
                android:numeric="integer|decimal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/eight"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:numeric="integer"
                android:onClick="numberOnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/nine"
                android:background="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:singleLine="true"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:numeric="integer"
                android:onClick="numberOnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="−"
                android:id="@+id/textView"
                android:gravity="center"
                android:background="#d9fcff"
                android:textSize="50dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/zero"
                android:textSize="50dp"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_span="3"
                android:layout_weight="0.333"
                android:numeric="integer"
                android:onClick="numberOnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="＋"
                android:id="@+id/textViewPuls"
                android:background="#d9fcff"
                android:textSize="50dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:singleLine="false"
                android:gravity="fill_vertical"
                android:layout_column="3"
                android:layout_weight="1"
                android:paddingLeft="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Clear"
                android:id="@+id/textViewClear"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#09ff10"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:layout_span="3"
                android:layout_weight="0.333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/textView10"
                android:textSize="50dp"
                android:background="#ff7200"
                android:gravity="left"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:paddingLeft="65dp" />

        </TableRow>

    </TableLayout>

</LinearLayout>