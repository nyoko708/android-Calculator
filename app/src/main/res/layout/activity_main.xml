<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating_material_dark"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView12"
            android:textColor="#ffffff"
            android:text="1+1"
            android:textSize="40dp"
            android:gravity="right" />
    </LinearLayout>

    <TableRow
        android:id="@+id/anser_box"
        style="@style/anser_box"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1.5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:text="0"
            android:id="@+id/anser"
            style="@style/anser_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_floating_material_dark"
            android:autoText="false"
            android:textStyle="bold"
            android:theme="@style/Base.TextAppearance.AppCompat.Title.Inverse"
            android:textSize="40dp"
            android:padding="10dp" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3f3f40"
        android:layoutMode="clipBounds"
        android:stretchColumns="4"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/textView1"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textSize="60dp"
                android:textIsSelectable="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/textView2"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="60dp"
                android:layout_margin="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/textView3"
                android:background="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="60dp"
                android:layout_margin="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="÷"
                android:id="@+id/textViewWaru"
                android:gravity="center"
                android:background="#d9fcff"
                android:textSize="60dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/textView4"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="60dp"
                android:textIsSelectable="true"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/textView5"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="60dp"
                android:singleLine="true"
                android:layout_margin="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/textView6"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="60dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="×"
                android:id="@+id/textViewKakeru"
                android:gravity="center"
                android:background="#d9fcff"
                android:textSize="60dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/textView7"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="60dp"
                android:textIsSelectable="true"
                android:singleLine="true"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/textView8"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="60dp"
                android:singleLine="true"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/textView9"
                android:background="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="60dp"
                android:singleLine="true"
                android:layout_margin="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="−"
                android:id="@+id/textView"
                android:gravity="center"
                android:background="#d9fcff"
                android:textSize="60dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/textView0"
                android:textSize="60dp"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_span="3"
                android:layout_weight="0.333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="＋"
                android:id="@+id/textViewPuls"
                android:background="#d9fcff"
                android:textSize="60dp"
                android:textColor="#00b9ff"
                android:layout_margin="1dp"
                android:singleLine="false"
                android:gravity="fill_vertical"
                android:layout_column="3"
                android:layout_weight="1"
                android:paddingLeft="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Clear"
                android:id="@+id/textViewClear"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#09ff10"
                android:textSize="40dp"
                android:layout_margin="1dp"
                android:layout_span="3"
                android:layout_weight="0.333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/textView10"
                android:textSize="60dp"
                android:background="#ff7200"
                android:gravity="left"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:paddingLeft="65dp" />

        </TableRow>

    </TableLayout>

</LinearLayout>